// Category: Advanced Concepts
// Question 1: Write a C program to implement a simple calculator using switch case.
#include <stdio.h>
int main() {
    int a, b, choice;
    printf("Enter two numbers: ");
    scanf("%d %d", &a, &b);
    printf("Choose operation: 1.Add 2.Subtract 3.Multiply 4.Divide\n");
    scanf("%d", &choice);
    switch (choice) {
        case 1: printf("Result: %d", a + b); break;
        case 2: printf("Result: %d", a - b); break;
        case 3: printf("Result: %d", a * b); break;
        case 4: printf("Result: %.2f", (float)a / b); break;
        default: printf("Invalid choice");
    }
    return 0;
}
// RPX~PYCHUNK @ C
