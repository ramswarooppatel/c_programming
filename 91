// Category: Miscellaneous
// Question 1: Write a C program to convert a decimal number to binary.
#include <stdio.h>
void decimal_to_binary(int n) {
    if (n > 1) decimal_to_binary(n / 2);
    printf("%d", n % 2);
}
int main() {
    int n = 10;
    decimal_to_binary(n);
    return 0;
}
